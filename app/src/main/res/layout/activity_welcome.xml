<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/mono1"



 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".welcomeActivity"

        >


        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-black"
            android:padding="12dp"
            android:text="Select  Action"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/alltext"
            android:textSize="30dp"

            >

        </TextView>

        <Button
            android:id="@+id/makeSalesButton"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeText"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/loginbutton"
            android:fontFamily="sans-serif-black"
            android:onClick="makesales"
            android:padding="20dp"
            android:text="Make Sales"

            android:textAllCaps="true"
            android:textColor="@color/alltext"
            android:textSize="30dp">

        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkSalesButton"
            android:layout_below="@+id/makeSalesButton"
            android:text="Check Sales"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/alltext"

            android:padding="20dp"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:background="@drawable/loginbutton"
            >

        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Stock"
            android:id="@+id/uploadStockButton"
            android:layout_below="@+id/checkSalesButton"
            android:layout_margin="20dp"

            android:fontFamily="sans-serif-black"
            android:textColor="@color/alltext"
            android:background="@drawable/loginbutton"
            android:padding="20dp"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:onClick="uploadstock"
            >

        </Button>

    </RelativeLayout>



</ScrollView>